script#settings-io-template(type="text/x-template")
  #settings-io
    h1 I/O Configuration

    h2 Remapable Pins
    table.pure-table.pure-table-striped
      thead
        tr
          th Pin
          th Type
          th Function
          th Mode
          th State

      tbody
        tr(v-for="pin in io")
          td {{pin.id}}
          td {{pin.type}}
          td
            templated-select.function(:model.sync="pin.config.function",
              :values="pin.functions")
          td
            templated-select.mode(
              v-if="pin.modes.length && pin.config.function != 'disabled'",
              :model.sync="pin.config.mode", :values="pin.modes")
          td.state
            io-indicator(:state="pin.state", :mode="pin.config.mode",
              :type="pin.type", :func="pin.config.function")


    h2 Input
    .pure-form.pure-form-aligned
      fieldset
        templated-input(v-for="templ in template.input", :name="$key",
          :model.sync="config.input[$key]", :template="templ")
