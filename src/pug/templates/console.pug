script#console-template(type="text/x-template")
  .console
    .toolbar(v-show="showToolbar")
      bbutton(title="Clear console.", @click="clear", icon="trash",
        text="Clear")

    .console-cards
      .message-card(v-for="msg in messages", :class="'log-' + (msg.level || 'info')")
        .card-header
          .card-meta
            span.level(:class="msg.level || 'info'") {{msg.level || 'info'}}
            span.source(v-if="msg.source") {{msg.source}}
            span.location(v-if="msg.where") {{msg.where}}
            span.repeat(v-if="msg.repeat > 1") Ã—{{msg.repeat}}
          .card-actions
            button.copy-btn(@click="copyMessage(msg)", title="Copy message")
              .fa.fa-copy
        .card-body
          .message-text {{msg.msg}}
