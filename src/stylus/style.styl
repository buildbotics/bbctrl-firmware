// System Alerts (upgrade, service due, etc.)
.system-alerts
  display flex
  flex-direction column
  gap 0

.alert
  display flex
  align-items center
  padding 8px 15px
  font-size 14px
  
  .alert-icon
    margin-right 10px
    font-size 16px
  
  .alert-content
    flex 1
    
    a
      margin-left 8px
      font-weight 500
      text-decoration underline
      
      &:hover
        text-decoration none
  
  .alert-dismiss
    cursor pointer
    padding 5px 10px
    opacity 0.7
    
    &:hover
      opacity 1

.alert-upgrade
  background #fff3cd
  border-bottom 1px solid #ffc107
  color #856404
  
  .alert-icon
    color #ffc107
  
  a
    color #664d03

.alert-service
  background #cce5ff
  border-bottom 1px solid #0d6efd
  color #004085
  
  .alert-icon
    color #0d6efd
  
  a
    color #002752
