#menu, #menuLink
  transition: all 0.2s ease-out;

#menu
  width sidebar-width
  background #222
  overflow hidden

  a
    color #999
    padding: 0.6em 0 0.6em 0.6em
    cursor pointer  // Ensure pointer cursor for all menu links

  .save
    display block
    margin 0.25em 0.6em

  .pure-menu li
    a:hover, a:focus
      background #333

  .pure-menu-list
    border 0

  .pure-menu-heading
    background inherit
    margin 0
    padding 0
    font-size 110%
    color #fff

    .pure-menu-link
      padding 0.6em
      color #fff

  .pure-menu-item .pure-menu-link
    padding-left 1.5em

#menuLink
  position absolute
  opacity 0.9
  background #222
  display none
  font-size 10px
  width 2em
  height auto
  padding 2.1em 1.6em

  &:hover
    background #333

  span
    position relative
    display block

  span, span:before, span:after
    background-color #fff
    width 100%
    height 0.2em

  span:before, span:after
    position absolute
    content " "
    margin-top -0.6em

  span:after
    margin-top 0.6em


@media (max-width: collapse-width)
  #menu
    position absolute
    z-index 100
    height 100vh
    width 0
    opacity 0.9

  #menuLink
    display block
    z-index 100

  #layout.active
    #menu
      width sidebar-width

    #menuLink
      margin-left sidebar-width
