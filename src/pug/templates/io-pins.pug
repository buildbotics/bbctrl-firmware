script#io-pins-template(type="text/x-template")
  .io-pins-container
    //- First table: Pins 1-13 (indices 0-12)
    table.io-pins
      tr: th.header(colspan=100) DB25 Pins 1-13
      tr
        th Pin
        th State
        th Function
      tr(v-for="i in 13", v-if="io_pins[i-1]")
        td(is="io-pins-row", :pin="io_pins[i-1]")

    //- Second table: Pins 14-25 (indices 13-24)
    table.io-pins
      tr: th.header(colspan=100) DB25 Pins 14-25
      tr
        th Pin
        th State
        th Function
      tr(v-for="i in 12", v-if="io_pins[12 + i]")
        td(is="io-pins-row", :pin="io_pins[12 + i]")


script#io-pins-row-template(type="text/x-template")
  td.pin {{pin.id}}
  td.state
    io-indicator(:state="pin.state", :mode="pin.mode", :type="pin.type",
      :func="pin.func")
  td.function {{pin.func}}
