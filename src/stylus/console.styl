.console
  // Fill available height in tab section
  display flex
  flex-direction column
  height 100%
  min-height 460px
  
  .toolbar
    margin-bottom 0.5em
    flex-shrink 0
    
  .console-cards
    // FIX: Use flex-grow instead of fixed max-height to fill available space
    flex 1
    overflow-y auto
    -webkit-overflow-scrolling touch
    display flex
    flex-direction column
    gap 8px
    padding 4px

  .message-card
    background #fff
    border 1px solid #ddd
    border-radius 4px
    // FIX: Removed 'overflow hidden' - was clipping message content
    flex-shrink 0
    
    // Level-based left border accent
    &.log-error, &.log-critical
      border-left 4px solid #d9534f
      
    &.log-warning
      border-left 4px solid #f0ad4e
      
    &.log-info
      border-left 4px solid #5bc0de
      
    &.log-debug
      border-left 4px solid #999

    .card-header
      display flex
      justify-content space-between
      align-items center
      padding 6px 10px
      background #f8f8f8
      border-bottom 1px solid #eee
      font-size 12px
      
      .card-meta
        display flex
        align-items center
        gap 10px
        flex-wrap wrap
        
        .level
          font-weight 600
          text-transform uppercase
          padding 2px 6px
          border-radius 3px
          font-size 11px
          
          &.error, &.critical
            background #f2dede
            color #a94442
            
          &.warning
            background #fcf8e3
            color #8a6d3b
            
          &.info
            background #d9edf7
            color #31708f
            
          &.debug
            background #f5f5f5
            color #666
        
        .source
          color #666
          
        .location
          color #999
          font-family monospace
          font-size 11px
          
        .repeat
          background #e0e0e0
          color #666
          padding 2px 6px
          border-radius 10px
          font-size 11px
          font-weight 600
      
      .card-actions
        flex-shrink 0
        
        .copy-btn
          background none
          border none
          color #999
          cursor pointer
          padding 4px 8px
          border-radius 3px
          
          &:hover
            background #e8e8e8
            color #333

    .card-body
      padding 10px
      
      .message-text
        white-space pre-wrap
        word-wrap break-word
        font-family monospace
        font-size 13px
        line-height 1.4
        color #333

// Mobile - adjust layout
@media only screen and (max-width 600px)
  .console
    min-height 280px
      
    .message-card
      .card-header
        // FIX: Use proper flex layout instead of negative margin hack
        flex-wrap wrap
        gap 6px
        
        .card-meta
          flex 1
          min-width 0
          
        .card-actions
          // Keep actions on same row when space allows
          flex-shrink 0
          
      .card-body
        padding 8px
        
        .message-text
          font-size 12px
