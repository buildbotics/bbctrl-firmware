script#files-template(type="text/x-template")
  .files(v-if="fs.files")
    .files-name(v-if="mode == 'save'")
      label Name:
      input(v-model="filename", @input="filename_changed", focus)

    .files-body
      //- Locations sidebar
      .files-locations
        .location-header Storage
        .files-location(v-for="name in locations", @click="open(name)",
          :class="{active: name == location}", :title="location_title(name)")
          .fa.fa-home(v-if="name == 'Home'")
          .fa.fa-usb(v-else)
          span.location-name {{name}}
          .fa.fa-eject.eject-btn(v-if="name != 'Home'", @click.stop="eject(name)",
            title="Eject USB drive")

      .files-box
        //- Breadcrumb path bar
        .files-path-bar
          .breadcrumbs
            a.breadcrumb-item(v-for="path in paths", track-by="$index",
              :class="{current: $index == paths.length - 1}",
              :title="path_title($index)", @click="load_path($index)")
              span {{path}}
              .fa.fa-chevron-right(v-if="$index < paths.length - 1")

          .path-actions
            bbutton(v-if="!$root.is_local", @click="upload",
              title="Upload a file from this computer to the controller.",
              icon="upload", text="Upload", primary)
            bbutton(@click="new_folder", :disabled="10 < paths.length",
              title="Create a new folder.", icon="folder-o", text="New Folder")

        //- File list
        .files-list
          table
            thead
              tr
                th.col-name Name
                th.col-size Size
                th.col-modified Modified

            tbody
              tr.file-row(v-for="file in files",
                :class="{selected: $index == selected, directory: file.dir}",
                @click="select($index)", @dblclick="activate(file)")
                td.col-name
                  .fa(:class="file.dir ? 'fa-folder' : file_icon(file.name)")
                  span {{file.name}}
                td.col-size
                  span(v-if="!file.dir") {{file.size | size}}
                td.col-modified {{file.modified | ago}}

          .empty-message(v-if="!files.length")
            .fa.fa-folder-open-o
            p This folder is empty

    dialog.new-folder-dialog(v-ref:new-folder, header="Create New Folder",
      :buttons="['Cancel', {text: 'Create', disabled: !folder_valid}]")
      div(slot="body")
        .form-group
          label Folder Name
          input(v-model="folder", @keyup.enter="create_folder", focus,
            placeholder="Enter folder name...")
