script#indicators-template(type="text/x-template")
  .indicators
    breakout(name="db25", :state="state", :template="template")

    div
      io-pins(:state="state", :template="template")

      table.legend
        tr
          th.header(colspan=100) Legend

        tr
          td: .fa.fa-circle.io.active
          th Active
          th.separator
          td: .fa.fa-circle.io.inactive
          th Inactive
          td: .fa.fa-random.io
          th Analog
        tr
          td: .fa.fa-plus-circle.io
          th Hi
          th.separator
          td: .fa.fa-minus-circle.io
          th Lo
          td
          th
        tr
          td: .fa.fa-circle-o.io
          th Tristated
          th.separator
          td: .fa.fa-ban.io
          th Disabled
          td
          th

    breakout(name="db15", :state="state", :template="template")
