script#view-files-template(type="text/x-template")
  .files-view
    //- Navigation bar (dark style)
    nav.navbar
      .nav-item.has-dropdown
        span File
        .fa.fa-caret-down
        .nav-dropdown
          a.dropdown-item(@click="edit", :class="{disabled: !selected || is_dir}")
            .fa.fa-pencil
            span Edit
          a.dropdown-item(@click="view", :class="{disabled: !selected || is_dir}",
            v-if="$root.webGLSupported")
            .fa.fa-eye
            span 3D View
          a.dropdown-item(@click="download", :class="{disabled: !selected || is_dir}")
            .fa.fa-download
            span Download
          .dropdown-divider
          a.dropdown-item(@click="delete", :class="{disabled: !selected}")
            .fa.fa-trash
            span Delete

      .spacer

      .actions
        bbutton(@click="upload", icon="upload", text="Upload",
          title="Upload a file from this computer")
        bbutton(@click="new_folder", icon="folder-o", text="New Folder",
          title="Create a new folder")

    a(v-el:download, :href="'/api/fs/' + selected", style="display:none",
      download, target="_blank")

    //- Files content
    .files-content
      files(v-ref:files, @selected="set_selected", @activate="download",
        :locations="state.locations")
